doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Recipe Book
        script(src='scripts/addFields.js', type='text/javascript')
        link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet')
        link(rel='stylesheet' href='style/parent.css')
        link(rel='stylesheet' href='style/create.css')
    body
        .main-container
            h2 Add a Field

            h2 Create Your Recipe
            form(action='/upload' accept-charset="utf-8" method='POST')
                .input-container
                    label Name of Recipe:
                    input(type='text', placeholder='Title', name='title', autocomplete='off' required='true')
                button(type="button" onclick='addIngredient()') Add Ingredient
                span#ingredients
                button(type="button" onclick='addStep()') Add Step
                span#steps
                p
                button(type='submit') Submit