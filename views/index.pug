doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Recipe Book
        link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet')
        link(rel='stylesheet', href='../style/parent.css')
        link(rel='stylesheet', href='../style/index.css')
        meta(name='google-signin-client_id', content='786319502323-fqjsf84cnqh79phubfcnnlior07hf385.apps.googleusercontent.com')
    body
        include header

        .list-container
            ul
                //pre=JSON.stringify(recipes, null, 3)
                for recipe in recipes
                    li
                        a(href='/recipe/' + recipe.id)
                            p=recipe.name

        script.
            function onLoad(){
                gapi.load('auth2', function(){
                    gapi.auth2.init();
                });
            }
        a(href='#', onclick='signOut();') Sign out
        script(src='../scripts/google.js')
        script(src='https://apis.google.com/js/platform.js?onload=onLoad', async='', defer='')

